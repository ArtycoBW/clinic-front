// middleware.ts
import { NextResponse } from 'next/server'

export function middleware(req: { method: string }) {
  const res = NextResponse.next()

  // Установите необходимые CORS заголовки
  res.headers.set('Access-Control-Allow-Origin', '*') // Или укажите конкретный домен
  res.headers.set('Access-Control-Allow-Methods', 'GET, POST, PUT, DELETE, OPTIONS')
  res.headers.set('Access-Control-Allow-Headers', 'Content-Type, Authorization')

  // Обработка предварительных запросов (OPTIONS)
  if (req.method === 'OPTIONS') {
    return res
  }

  return res
}

// Укажите маршруты, к которым применяется middleware
export const config = {
  matcher: '/api/:path*',
}
