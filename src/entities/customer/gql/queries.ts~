// Запрос для поиска клиентов
export const SEARCH_CUSTOMER = gql`
    query searchCustomer {
        searchCustomer(cond: "(it.person.entity.firstName+it.person.entity.lastName).$upper $like '%' + ''.$upper + '%'")
        {
            elems {
                ...CustomerAttributes
            }
        }
    }
`
